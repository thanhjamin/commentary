<div class="comment">
  <div class="username"><%= comment.full_name %> | <%= comment.email %></div>
  <div class="created_at"><%= comment.created_at.strftime("%B %d, %Y") %></div>
  <div class="content">
    <%= link_to comment.comment, comment %>
  </div>
  <div class="actions">
    <%= link_to "Reply", new_comment_path(:parent_id => comment) %>   
    <% if session[:comment_ids] && session[:comment_ids].include?(comment.id) %>
    	| <%= link_to "Edit", edit_comment_path(comment) %>
    	| <%= link_to "Destroy", comment, :confirm => "Are you sure?", :method => :delete %>
    <% end %>
  </div>
</div>
