<p id="notice"><%= notice %></p>

<h1>Comments</h1>

<table>
  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= link_to comment.comment, comment %></td>
        <td><%= link_to 'Edit', edit_comment_path(comment) %></td>
        <td><%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= render 'form' %>

